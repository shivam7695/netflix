**/Script.js /**
// Get the modal
const modal = document.getElementById("signInModal");
const btn = document.getElementById("sign-btn");
const span = document.getElementsByClassName("close")[0];
const hero = document.querySelector(".hero-section")

btn.onclick = function() {
  modal.style.display = "block";
  hero.style.display="none";
}
span.onclick = function() {
  modal.style.display = "none";
  hero.style.display = "block";
}
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}
// for question and answer

const btn1 = document.querySelector("#que1");
const btn2 = document.querySelector("#que2");
const btn3 = document.querySelector("#que3");
const btn4 = document.querySelector("#que4");
const btn5 = document.querySelector("#que5");
const btn6 = document.querySelector("#que6");

const ans1 = document.querySelector(".ans1");
const ans2 = document.querySelector(".ans2");
const ans3 = document.querySelector(".ans3");
const ans4 = document.querySelector(".ans4");
const ans5 = document.querySelector(".ans5");
const ans6 = document.querySelector(".ans6");
let count = 0;
btn1.addEventListener("click", function(){
    if(count == 0){
        ans1.style.display = "block";
        count++;
        
    }else{
        ans1.style.display = "none";
        count--;
    }
})
btn2.addEventListener("click", function(){
    if(count == 0){
        ans2.style.display = "block";
        count++;
    }else{
        ans2.style.display = "none";
        count--;
    }
})
